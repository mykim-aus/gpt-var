{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2018",
    "module": "ESNext",
    "declaration": true,
    "outDir": "./dist/types",
    "declarationDir": "./dist/types",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
